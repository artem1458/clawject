# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{*.md,*.mdx}]
max_line_length = off
trim_trailing_whitespace = false
indent_size = 2

[{*.yml,*.yaml,*.json}]
indent_size = 2
